<div class="row">
  <div class="push_one ten columns">

    <h2>Login</h2>

    <%= form_tag sessions_path do %>

      <div class="row">
        <%= label_tag :email %>
        <%= text_field_tag :email %>
      </div>

      <br />

      <div class="row">
        <%= label_tag :password %>
        <%= password_field_tag :password %>
      </div>

      <br />

      <div class="row">
        <%= submit_tag :login %>
      </div>

      <br />

      <%= flash[:login_error] %>

      <br />

      <p>Don't have an account? <%= link_to 'Create an Account', new_user_path %></p>

    <% end %>

  </div>
</div>