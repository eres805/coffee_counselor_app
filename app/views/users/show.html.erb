<div class="row">
	<div class="push_one ten columns">
	

		<h2>Hello, <%= @user.first_name %> <%= @user.last_name %></h2>

		<h3>Favorite Coffees</h3>

		<ul>
			<% @user.favorite_coffees.each do |coffee| %>
				<li><%= link_to coffee.bean_name, coffee_bean_path(coffee.id) %></li>
			<% end %>
		</ul>

	</div>
</div>



